<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.testproject.dao.BoardCommentDao">

  <resultMap type="Comment" id="commentMap">
    <id column="bcno" property="no"/>
    <result column="bno" property="objectNo"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    
    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="writer" javaType="member">
      <id column="mno" property="no"/>
      <result column="nick" property="nickname"/>
      <result column="filepath" property="filepath"/>
      <result column="ageGroup" property="ageGroup"/>
    </association>

  </resultMap>

  <select id="findByBoardNo" resultMap="commentMap" parameterType="HashMap">
    select
      bc.bcno,
      m.mno,
      m.filepath,
      m.nick,
      bc.cont,
      bc.cdt
    from
      board_comment bc 
      join member m on bc.mno=m.mno
      join board b on b.bno=bc.bno
    where
      bc.act=1
      and b.bno=#{boardNo}
    order by
      bcno
    limit #{cri.pagesStart}, #{cri.perPageNum}
  </select>
  
  <select id="findCommentByNo" resultMap="commentMap">
    select
      bc.bcno,
      m.filepath,
      m.nick,
      bc.cont,
      bc.cdt
    from
      board_comment bc 
      join member m on bc.mno=m.mno
      join board b on b.bno=bc.bno
    where
      bc.act=1
      and b.bno=#{value}
    order by
      bc.bcno desc
    limit 1
  </select>
  
  <insert id="insertComment" parameterType="comment"
    useGeneratedKeys="true" keyColumn="bcno" keyProperty="no"> 
    insert into board_comment(bno, mno, cont) 
    values(#{objectNo},#{writer.no},#{content})
  </insert>


  <delete id="deleteComment">
    delete from board_comment 
    where bcno=#{value}
  </delete>
  
  <update id="updateComment" parameterType="comment">
    update 
      board_comment 
    set 
      cont=#{content} 
    where 
      bcno=#{no}
  </update> 
  
  <select id="findCommentsCount" resultType="Integer">
    select 
      count(*) 
    from 
      board_comment 
    where 
      bno = #{value}
  </select>
  
  <delete id="deleteAll">
    delete from board_comment 
    where bno=#{value}
  </delete>
  
  <!-- 은지 -->
  <!-- 마이페이지 작성 댓글 -->
  
  <select id="findByMyComment" parameterType="map" resultMap="commentMap" >
    SELECT
      bc.cont,
      b.title
    FROM
      board_comment bc
      join board b on bc.bno = b.bno
    WHERE
      b.mno = #{memberNo}
    AND
      b.act = 1
    ORDER BY 
      b.bno desc
    limit #{pagesStart}, #{perPageNum}
  </select>
  
  <select id="countMyComment" parameterType="int" resultType="int">
    SELECT
      COUNT(*)
    FROM
      board_comment
    WHERE
      mno=#{no}
    AND
      act=1 
  </select>
  

</mapper>



